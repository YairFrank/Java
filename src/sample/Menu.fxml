<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="root" depthTest="ENABLE" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" onDragDetected="#startGame" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.121" fx:controller="sample.MenuController">

<center>
    <VBox minWidth="200" spacing="10.0" BorderPane.alignment="TOP_LEFT">
        <children>
            <Button id="startButton" fx:id="startButton" onAction="#startGame" prefWidth="100.0" text="Start Game" VBox.vgrow="NEVER" />
            <Button id="settingsButton" fx:id="settingsButton" onAction="#settings" prefWidth="100.0" text="Settings" VBox.vgrow="NEVER" />
            <Button id="endButton" fx:id="exit" onAction="#end" prefWidth="100.0" text="Exit" VBox.vgrow="NEVER" />
        </children>
        <padding>
            <Insets left="200.0" right="200.0" top="200.0" />
        </padding>
    </VBox>
</center>
</BorderPane>
